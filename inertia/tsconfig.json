{
  "extends": "@adonisjs/tsconfig/tsconfig.client.json",
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "module": "ESNext",
    "jsxImportSource": "vue",
    "paths": {
      "~/*": ["./*"],
    },
  },
  "include": ["./**/*.ts", "./**/*.vue"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"]
}